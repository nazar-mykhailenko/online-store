@model (IEnumerable<AppUser> admins,IEnumerable<AppUser> users)


<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="form-group">
		<label for="search" class="control-label">Email</label>
		<input class="form-control text-black border-1 border-black" name="search" type="search" placeholder="Search">
		<button class="btn btn-outline-primary" type="submit">Search</button>
	</div>
</form>

<h1 class="my-3">
	Admins
</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Credentials
			</th>
			<th>
				Email
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var admin in Model.admins)
		{
			<tr>
				<td width="10%">
					@admin.Id
				</td>
				<td width="30%">
					@(admin.Name + " " + admin.Surname)
				</td>
				<td width="45%">
					@admin.Email
				</td>
				<td width="15%">
					<a class="btn btn-danger" asp-controller="User" asp-action="DeleteAdmin" asp-route-id="@admin.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<h1 class="my-3">
	Users
</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Credentials
			</th>
			<th>
				Email
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.users)
		{
			<tr>
				<td width="10%">
					@user.Id
				</td>
				<td width="30%">
					@(user.Name + " " + user.Surname)
				</td>
				<td width="30%">
					@user.Email
				</td>
				<td width="15%">
					<a class="btn btn-secondary" asp-controller="User" asp-action="AddAdmin" asp-route-id="@user.Id">Make&nbsp;admin</a>
				</td>
				<td width="15%">
					<form method="post" class="mx-2" asp-controller="User" asp-action="Delete">
						<input type="hidden" value="@user.Id" name="VM.Id" />
						<input type="submit" value="Delete" class="btn btn-danger">
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>